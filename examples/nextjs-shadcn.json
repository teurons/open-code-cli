{
  "workflow": [
    {
      "task": "prompt",
      "name": "app_name",
      "message": "Enter the name of your app",
      "type": "input",
      "default": "my-app"
    },
    {
      "task": "execute",
      "command": "create next-app@latest {{app_name}} --typescript --tailwind --eslint --yes",
      "package_manager": "auto"
    },
    {
      "task": "execute",
      "commands": ["cd {{app_name}}", "dlx shadcn@latest init", "dlx shadcn@latest add button"],
      "package_manager": "auto",
      "depends": ["app_name"]
    }
  ]
}
