{
  "workflow": [
    {
      "task": "prompt",
      "name": "app_name",
      "message": "Enter the name of your blog",
      "type": "input",
      "default": "my-blog"
    },
    {
      "task": "npm_cmd",
      "command": "create next-app@latest {{app_name}} --typescript --tailwind --eslint --yes",
      "package_manager": "auto"
    },
    {
      "task": "execute",
      "command": "cd {{app_name}}",
      "package_manager": "auto",
      "depends": ["app_name"]
    },
    {
      "task": "npm_cmd",
      "commands": [
        "shadcn@latest init",
        "shadcn@latest add button popover badge card",
        "shadcn@latest add https://21st.dev/r/designali-in/book"
      ],
      "package_manager": "auto"
    },
    {
      "task": "npm_install",
      "package": "zod fumadocs-ui fumadocs-core",
      "package_manager": "auto"
    },
    {
      "task": "npm_cmd",
      "commands": ["giget gh:fuma-nama/fumadocs/examples/next-mdx/mdx-components.tsx . --force"],
      "package_manager": "auto"
    }
  ]
}
